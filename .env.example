# Application
APP_NAME="AI Agent Platform"
DEBUG=false

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/ai_agent_platform
DATABASE_ECHO=false

# Redis
REDIS_URL=redis://localhost:6379
REDIS_CACHE_TTL=3600

# AI Model Configuration
# Use either OpenAI or Anthropic (or both)
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
DEFAULT_MODEL=openai:gpt-4

# Email (Mailgun)
MAILGUN_API_KEY=your-mailgun-api-key
MAILGUN_DOMAIN=mg.yourdomain.com
MAILGUN_FROM_EMAIL=noreply@yourdomain.com

# Slack Adapter
# Get these from https://api.slack.com/apps -> your app
SLACK_BOT_TOKEN=xoxb-your-bot-token-here
SLACK_SIGNING_SECRET=your-signing-secret-here
# Optional: Slack webhook for notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Background Jobs
ARQ_REDIS_URL=redis://localhost:6379
MAX_WORKER_JOBS=10

# Scheduler
SCHEDULER_TIMEZONE=UTC
